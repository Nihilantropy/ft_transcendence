    #     proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    #     proxy_set_header X-Forwarded-Proto $scheme;
    #     proxy_http_version 1.1;
    #     proxy_set_header Upgrade $http_upgrade;
    #     proxy_set_header Connection $connection_upgrade;
    #     proxy_connect_timeout 5s;
    #     proxy_send_timeout 30s;
    #     proxy_read_timeout 30s;
    #     proxy_intercept_errors on;
    #     error_page 502 503 504 /50x.html;
    #     add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https:; font-src 'self' data:; connect-src 'self' ws: wss: https://${HOST_DOMAIN}; frame-ancestors 'self'; base-uri 'self'; form-action 'self';" always;
    # }

    # Temporary root location - Returns API info (until frontend is implemented)
    location / {
        access_log /var/log/nginx/root_access.log main;
        default_type application/json;
        return 200 '{"status":"ok","message":"SmartBreeds API Gateway","api_endpoint":"https://${HOST_DOMAIN}/api","documentation":"Use /api/* endpoints for backend services","note":"Frontend not yet implemented - use direct API calls"}';
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Deny access to sensitive files
    location ~* \.(env|git|svn|htaccess|htpasswd)$ {
        deny all;
        access_log off;
        log_not_found off;
    }
}

# HTTP to HTTPS redirect (Standard port 80)
server {
    listen 80;
    server_name ${HOST_DOMAIN};

    # Log all HTTP requests for debugging
    access_log /var/log/nginx/http_access.log main;

    # Redirect all HTTP traffic to HTTPS on standard port 443
    return 301 https://$host$request_uri;
}
