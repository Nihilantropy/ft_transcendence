# ft_transcendence Environment Variables
# Copy this file to .env and update with your values

# Application
APP_NAME=ft_transcendence
APP_ENV=development
APP_DEBUG=true
APP_URL=https://localhost

# Database
DB_CONNECTION=sqlite
DB_DATABASE=/data/transcendence.db

# Security
APP_KEY=your-secret-key-here-min-32-chars
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=24h

# OAuth (Google Sign-in)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://localhost/auth/google/callback

# 2FA
TWO_FACTOR_SECRET=your-2fa-secret-here

# Blockchain (Avalanche testnet)
AVALANCHE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
AVALANCHE_PRIVATE_KEY=your-wallet-private-key
AVALANCHE_CONTRACT_ADDRESS=

# HashiCorp Vault
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=your-vault-token

# Session
SESSION_SECRET=your-session-secret-here
SESSION_LIFETIME=120

# Redis (if needed for sessions/cache)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Mail (for notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@ft-transcendence.com
MAIL_FROM_NAME="${APP_NAME}"

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development
VITE_PORT=5173
API_PORT=3000

# Docker specific
DOCKER_USER_ID=1000
DOCKER_GROUP_ID=1000